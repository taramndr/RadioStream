<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="tara.com.radiostreamservice.MainActivity"
android:orientation="vertical"
android:layout_margin="10px"
android:background="#ffadad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_headset" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="FM Radio!"
            android:textColor="#757575"
            android:textSize="20sp" />

    </LinearLayout>

    <com.pkmmte.view.CircularImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_music_note_black_24dp"
        app:border="true"
        app:border_color="#ffffff"
        app:border_width="4dp"
        app:shadow="true"
        android:id="@+id/iv_music"
        android:layout_gravity="center"/>


<ProgressBar
    android:id="@+id/progress_bar1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:indeterminateOnly="true"
    android:layout_margin="5dp"
    android:layout_gravity="center"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Linearlayout1"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="0dp">

    <View style="@style/Divider"/>

    <Button
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/btn_PlayStop"
        android:background="@drawable/ic_btn_play"
        />

    <Button
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_btn_stop"
        android:id="@+id/btn_stop"/>

    <View style="@style/Divider"/>


</LinearLayout>

</LinearLayout>

